<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:weightSum="10.2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/task_id_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.1"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="3918332" />

    <TextView
        android:id="@+id/task_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.9"
        android:gravity="center"
        android:text="Pending \n2018-02-20 18:20" />

    <TextView
        android:id="@+id/task_deadline_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.9"
        android:gravity="center"
        android:text="2018-03-01 09:30:00" />


    <TextView
        android:id="@+id/task_location_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="[GYM] World Class ParkLake" />

    <ImageView
        android:id="@+id/task_directions_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_weight="2.3"
        android:gravity="center"
        android:src="@drawable/ic_directions_black_24dp" />

</LinearLayout>